<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Date and actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_metric_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024-01-01"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_metric"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_edit_24"
                app:iconSize="16dp"
                app:iconPadding="0dp"
                style="@style/Widget.Material3.Button.IconButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_metric"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_delete_24"
                app:iconSize="16dp"
                app:iconPadding="0dp"
                app:iconTint="@color/error"
                style="@style/Widget.Material3.Button.IconButton" />

        </LinearLayout>

        <!-- Metrics display in grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Weight and BMI -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85.0 kg"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/text_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI: 24.5"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            </LinearLayout>

            <!-- Glucose and Ketones -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_glucose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85 mg/dL"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <TextView
                    android:id="@+id/text_ketones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.8 mmol/L"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            </LinearLayout>

            <!-- GKI and BP -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_gki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GKI: 2.6"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/secondary" />

                <TextView
                    android:id="@+id/text_blood_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120/80"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Notes (if present) -->
        <TextView
            android:id="@+id/text_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Notes: Feeling great today!"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textStyle="italic"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>